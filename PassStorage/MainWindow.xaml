<Window x:Class="PassStorage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PassStorage" Height="600" Width="1000" WindowStartupLocation="CenterScreen" Icon="Lock-256.ico" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/PassStorage;component/Images/background.jpg" />
        </Grid.Background>

        <Grid Name="gridLogin" Visibility="Hidden" FocusManager.FocusedElement="{Binding ElementName=txtEnterPassword}" KeyDown="gridLogin_KeyDown">
            <Label Content="Login" HorizontalAlignment="Left" Margin="160,160,0,0" VerticalAlignment="Top" FontSize="40" Foreground="White"/>
            <PasswordBox Name="txtEnterPassword" HorizontalAlignment="Left" Margin="160,249,0,0" VerticalAlignment="Top" Width="405" FontSize="25"/>
            <Image HorizontalAlignment="Left" Height="256" Margin="700,28,0,0" VerticalAlignment="Top" Width="256" Source="Images/Padlocks_256.png"/>
            <Button Name="btnEnterLogin" Content="Enter" HorizontalAlignment="Left" Margin="299,323,0,0" VerticalAlignment="Top" Width="106" FontSize="20" Click="btnEnterLogin_Click" />
            <Label Name="lbWrongPassword" Visibility="Hidden" Content="Wrong password!" HorizontalAlignment="Left" Margin="512,319,0,0" VerticalAlignment="Top" Foreground="White" FontSize="25"/>
        </Grid>
        <Grid Name="gridMaster" Visibility="Hidden" KeyDown="gridMaster_KeyDown" >
            <Label Content="Master" HorizontalAlignment="Left" Margin="160,160,0,0" VerticalAlignment="Top" FontSize="40" Foreground="White"/>
            <PasswordBox Name="txtMasterPassword" HorizontalAlignment="Left" Margin="160,249,0,0" VerticalAlignment="Top" Width="405" FontSize="25"/>
            <Image HorizontalAlignment="Left" Height="256" Margin="700,28,0,0" VerticalAlignment="Top" Width="256" Source="Images/Padlocks_256.png"/>
            <Button Name="btnMasterLogin" Content="Confirm" HorizontalAlignment="Left" Margin="299,323,0,0" VerticalAlignment="Top" Width="106" FontSize="20" Click="btnMasterLogin_Click"/>
        </Grid>
        <Grid Name="gridPasswords" Visibility="Hidden">
            <Label Content="Pass Vault" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="40" Foreground="White"/>
            <Image HorizontalAlignment="Left" Height="150" Margin="834,10,0,0" VerticalAlignment="Top" Width="150" Source="Images/Padlocks_256.png"/>
            <ListView Name="listPasswords" FontSize="16" HorizontalAlignment="Left" Height="489" Margin="10,73,0,0" VerticalAlignment="Top" Width="315" Foreground="#FF9900" Background="Transparent" SelectionChanged="listPasswords_SelectionChanged">
                <ListView.Resources>
                    <Style TargetType="GridViewColumnHeader">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </Style>
                </ListView.Resources>
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Label Name="detailTitle" Content="Title" HorizontalAlignment="Left" Margin="430,156,0,0" VerticalAlignment="Top" Foreground="White" FontSize="40"/>
            <Image HorizontalAlignment="Left" Height="100" Margin="369,244,0,0" VerticalAlignment="Top" Width="100" Source="Images/login_icon.png"/>
            <Image HorizontalAlignment="Left" Height="100" Margin="369,380,0,0" VerticalAlignment="Top" Width="100" Source="Images/password_icon.png" RenderTransformOrigin="0.49,0.47"/>
            <Label Name="detailPassword" Content="Password" HorizontalAlignment="Left" Margin="474,402,0,0" VerticalAlignment="Top" Foreground="White" FontSize="30"/>
            <Label Name="detailLogin" Content="Login" HorizontalAlignment="Left" Margin="474,266,0,0" VerticalAlignment="Top" Foreground="White" FontSize="30"/>
            <Button Name="btnLoginCopy" Content="Copy" HorizontalAlignment="Left" Margin="474,322,0,0" VerticalAlignment="Top" Width="75" Click="btnLoginCopy_Click"/>
            <Button Name="btnPassCopy" Content="Copy" HorizontalAlignment="Left" Margin="474,458,0,0" VerticalAlignment="Top" Width="75" Click="btnPassCopy_Click"/>
            <Button Name="btnAddNew" Content="New password" HorizontalAlignment="Left" Margin="848,528,0,0" VerticalAlignment="Top" Width="119" Click="btnAddNew_Click"/>
            <Button Visibility="Visible" Name="btnWritePasswords" Content="Save passwords" HorizontalAlignment="Left" Margin="723,528,0,0" VerticalAlignment="Top" Width="103" Click="btnWritePasswords_Click"/>
        </Grid>
    </Grid>
</Window>
